<PageFunction x:Class="Or.Pages.SuppressionClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"        
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"         
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SuppressionClient">

    <Grid>
        <TextBlock x:Name="titre" HorizontalAlignment="Left" Margin="213,31,0,0" TextWrapping="Wrap" Text="Suppression d'un client" VerticalAlignment="Top" FontSize="30" Background="White"/>
        <Button x:Name="retour" Content="Retour" HorizontalAlignment="Left" Margin="503,245,0,0" VerticalAlignment="Top" FontSize="18" Click="Retour_Click"/>
        <Button x:Name="supprimer" Content="Supprimer le client" HorizontalAlignment="Left" Margin="168,245,0,0" VerticalAlignment="Top" FontSize="18" Click="SupprimerClient"/>
        <TextBox x:Name="Carte" HorizontalAlignment="Left" Margin="270,130,0,0" Foreground="{Binding Color}" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="20"/>
        <Label x:Name="num" Content="Numéro de carte : " HorizontalAlignment="Left" Margin="270,103,0,0" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
    
</PageFunction>