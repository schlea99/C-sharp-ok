<PageFunction x:Class="Or.Pages.Accueil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"        
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"         
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Accueil">

    <Grid>
        <TextBlock x:Name="Titre" HorizontalAlignment="Left" Margin="316,57,0,0" TextWrapping="Wrap" Text="BANQUE" VerticalAlignment="Top" FontSize="36" Background="White"/>
        <Button x:Name="Valider" Content="Valider" HorizontalAlignment="Left" Margin="343,238,0,0" VerticalAlignment="Top" FontSize="18" Click="GoConsultationCarte"/>
        <TextBox x:Name="NumeroCarte" HorizontalAlignment="Left" Margin="288,179,0,0" Foreground="{Binding Color}" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="20"/>
        <Label x:Name="labelN" Content="Numéro Carte" HorizontalAlignment="Left" Margin="288,147,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="CreationClient" Content="Créer un compte client" HorizontalAlignment="Left" Margin="454,356,0,0" VerticalAlignment="Top" FontSize="18" Click="GoCreerClient"/>
        <Button x:Name="SuppressionClient" Content="Supprimer un compte client" HorizontalAlignment="Left" Margin="412,408,0,0" VerticalAlignment="Top" FontSize="18" Click="GoSupprimerClient"/>


    </Grid>
</PageFunction>
