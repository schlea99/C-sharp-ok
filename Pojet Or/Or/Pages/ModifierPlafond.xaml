<PageFunction x:Class="Or.Pages.ModifierPlafond"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"        
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"         
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ModifierPlafond">

    <Grid>
        <TextBlock x:Name="titre" HorizontalAlignment="Left" Margin="157,33,0,0" TextWrapping="Wrap" Text="Modification du plafond de la carte" VerticalAlignment="Top" FontSize="30" Background="White"/>
        <Button x:Name="retour" Content="Retour" HorizontalAlignment="Left" Margin="443,262,0,0" VerticalAlignment="Top" FontSize="18" Click="Retour_Click"/>
        <Button x:Name="valider" Content="Valider" HorizontalAlignment="Left" Margin="219,262,0,0" VerticalAlignment="Top" FontSize="18" Click="Valider_Click"/>
        <TextBox x:Name="NouveauPlafond" HorizontalAlignment="Left" Margin="270,170,0,0" Foreground="{Binding Color}" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="20"/>
        <Label x:Name="plafond" Content="Nouveau plafond : " HorizontalAlignment="Left" Margin="270,138,0,0" VerticalAlignment="Top" FontSize="14"/>
    </Grid>

</PageFunction>