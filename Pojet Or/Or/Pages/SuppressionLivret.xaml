<PageFunction x:Class="Or.Pages.SuppressionLivret"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"        
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"         
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SuppressionLivret">

    <StackPanel Margin="20" HorizontalAlignment="Center">
        <TextBlock x:Name="titre" HorizontalAlignment="center" Margin="0,0,0,40" TextWrapping="Wrap" Text="Supprimer un livret associé à la carte" VerticalAlignment="Top" FontSize="28 " Background="White"/>
        <ListView x:Name="listViewLivrets" Height="184" Width="448" Margin="0,0,0,10" RenderTransformOrigin="0.5,0.5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id Compte" DisplayMemberBinding="{Binding Id}" Width="120"/>
                    <GridViewColumn Header="Solde" DisplayMemberBinding="{Binding Solde}" Width="120"/>
                    <GridViewColumn Header="Action" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Supprimer" CommandParameter="{Binding Id}" Click="Supprimer_click" Width="120"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0" Height="121" Width="580" RenderTransformOrigin="0.5,0.5" >
            <Button Content="Retour" Click="Retour_Click" Width="100" Margin="0,43" HorizontalAlignment="Center"/>
        </StackPanel>
    </StackPanel>

</PageFunction>
