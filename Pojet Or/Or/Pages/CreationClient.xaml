<PageFunction x:Class="Or.Pages.CreationClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      x:TypeArguments="sys:Int64"        
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Or.Pages"
      xmlns:ec="clr-namespace:Or.Business"         
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreationClient">

        <Grid>
        <TextBlock x:Name="titre" HorizontalAlignment="Left" Margin="206,25,0,0" TextWrapping="Wrap" Text="Création d'un nouveau client" VerticalAlignment="Top" FontSize="30" Background="White"/>
        <Button x:Name="retour" Content="Retour" HorizontalAlignment="Left" Margin="578,371,0,0" VerticalAlignment="Top" FontSize="18" Click="Retour_Click"/>
        <Button x:Name="creer" Content="Ajouter le client" HorizontalAlignment="Left" Margin="138,371,0,0" VerticalAlignment="Top" FontSize="18" Click="CreerNouveauClient"/>
        <TextBox x:Name="Prenom" HorizontalAlignment="Left" Margin="270,130,0,0" Foreground="{Binding Color}" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="20"/>
        <Label x:Name="prenom" Content="Prénom : " HorizontalAlignment="Left" Margin="270,103,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="Nom" HorizontalAlignment="Left" Margin="270,216,0,0" Foreground="{Binding Color}" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="20"/>
        <Label x:Name="nom" Content="Nom : " HorizontalAlignment="Left" Margin="270,184,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox x:Name="IdConseiller" HorizontalAlignment="Left" Margin="270,307,0,0" Foreground="{Binding Color}" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="20"/>
        <Label x:Name="id" Content="Identifiant du conseiller : " HorizontalAlignment="Left" Margin="270,275,0,0" VerticalAlignment="Top" FontSize="14"/>
    </Grid>
    
</PageFunction>
    
